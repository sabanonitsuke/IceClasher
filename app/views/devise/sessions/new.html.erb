<%= render "shared/second-header"%>

<%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>
  <div class='container'>
    <div class='form-header'>
      <h1 class='form-header-text'>
        会員情報入力
      </h1>
    </div>
    <div class='login-flash-message'>
      <%= flash[:notice] %>
      <%= flash[:alert] %>
    </div>
    <div class="form-group">
      <div class='input-group'>
        <label class="form-text">メールアドレス</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.email_field :email, class:"input-form", id:"email", placeholder:"ご登録のメールアドレス", autofocus: true %>
    </div>
    <div class="form-group">
      <div class='input-group'>
        <label class="form-text">パスワード</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.password_field :password, class:"input-form", id:"password", placeholder:"" %>
    </div>
    <div class='btn-space'>
      <%= f.submit "ログイン" ,class:"red-btn" %>
    </div>
  </div>
<% end %>