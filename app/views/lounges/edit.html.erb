<%= render "shared/second-header"%>
<div class="container">
  <div class='form-header'>
    <h1 class='form-header-text'>
      ラウンジ編集
    </h1>
  </div>
  <%= form_with model: @lounge, local: true do |f| %>
    <%= render 'shared/error_messages', model: f.object %>
    <div class="form-group">
      <div class='input-group'>
        <label id="name" class="form-text">ラウンジ名</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_field :name, class:"input-form", id:"name", placeholder:"くつろぎ", maxlength:"40" %>
    </div>

    <div class="form-group">
      <div class='input-group'>
        <label id="time_limit" class="form-text">1人あたりの発言時間(秒)</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_field :time_limit, class:"input-form", id:"time_limit", placeholder:"1以上の整数(半角)", value: (@lounge.new_record? ? 15 : @lounge.time_limit) %>
    </div>

    <div class="form-group">
      <div class='input-group'>
        <label id="name" class="form-text">あいことば</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.password_field :password, class:"input-form", id:"password", placeholder:"6文字以上" %>
    </div>
    <div class='btn-space'>
      <%= f.submit "修正する" ,class:"red-btn" %>
    </div>
  <% end %>
</div>