  <header class = "header" >
    <%= link_to "IceClasher", root_path, class: "header-logo" %>
    <% if user_signed_in? %>
      <div class="nav-buttons">
        <%= link_to current_user.nickname, root_path, class: "nav-btn" %>
        <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "nav-btn" %>
      </div>
    <% else %>
      <div class="nav-buttons">
        <%= link_to 'ログイン', new_user_session_path, class: "nav-btn" %>
        <%= link_to '新規登録', new_user_registration_path, class: "nav-btn" %>
      </div>
    <% end %>
  </header>